<!DOCTYPE html>
<html>
<%- include("./partials/head.ejs") %>
<body>
    <%- include("./partials/nav-logged-in.ejs") %>
    <div class="notes-group">
        <div class="new-note-box">        
            <form method="post">
                <textarea id="note" name="note" rows="5", cols="60" maxlength="315" required></textarea>
                <div class="note-buttons">
                    <button type="submit"><img src="/save-icon.png" width="54px" height="54px" alt="save"></button>
                    <button type="reset"><img src="/remove-icon.png" width="45px" height="45px" alt="reset"></button>
                </div>    
            </form>                    
        </div>
        <% if (notes.length > 0) { %>
            <% notes.forEach(note => { %>
                <div class="note-box">
                    <form method="post">    
                        <h3 class="id"><%= note.id %></h3>
                        <textarea id="note" name="note" rows="5", cols="60" maxlength="315" required><%= note.note %></textarea>
                        <div class="note-buttons">
                            <button formaction="/notes/<%= note.id %>/update"><img src="/save-icon.png" width="54px" height="54px" alt="update"></button>             
                            <button formaction="/notes/<%= note.id %>/delete"><img src="/thrash-icon.png" width="45px" height="46px" alt="delete"></button>
                        </div>    
                    </form>    
                </div>                 
            <% }) %>
        <% } else { %>
            <p>You have to create notes to display.</p>
        <% } %>
    </div>
    <%- include("./partials/footer.ejs") %>
</body>
</html>